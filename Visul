        document.addEventListener('DOMContentLoaded', () => {
            const timelineContainer = document.getElementById('timeline-container');
            const detailsTitle = document.getElementById('details-title');
            const detailsCompany = document.getElementById('details-company');
            const detailsContent = document.getElementById('details-content');

            experiences.forEach((exp, index) => {
                const item = document.createElement('div');
                item.className = `timeline-item relative pl-8 pb-8 cursor-pointer ${index === 0 ? 'active' : ''}`;
                item.dataset.id = exp.id;
                item.innerHTML = `
                    <h5 class="font-bold">${exp.title}</h5>
                    <p class="text-sm text-gray-500">${exp.period}</p>
                `;
                timelineContainer.appendChild(item);
            });

            const timelineItems = document.querySelectorAll('.timeline-item');

            function updateDetails(id) {
                const experience = experiences.find(exp => exp.id === id);
                if (experience) {
                    detailsTitle.textContent = experience.title;
                    detailsCompany.textContent = experience.company;
                    detailsContent.innerHTML = experience.details.map(d => `<p>&bull; ${d}</p>`).join('');
                    
                    timelineItems.forEach(item => {
                        item.classList.toggle('active', item.dataset.id === id);
                    });
                }
            }

            timelineItems.forEach(item => {
                item.addEventListener('click', () => {
                    updateDetails(item.dataset.id);
                });
            });

            updateDetails(experiences[0].id);

            const engagementCtx = document.getElementById('engagementChart').getContext('2d');
            new Chart(engagementCtx, {
                type: 'bar',
                data: {
                    labels: ['Seguidores Iniciais', 'Seguidores Finais'],
                    datasets: [{
                        label: 'Total de Seguidores',
                        data: [3000, 11000],
                        backgroundColor: ['#E2DACE', '#587D71'],
                        borderColor: ['#D1C4B3', '#4A6A5F'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return ` ${context.raw.toLocaleString('pt-BR')} seguidores`;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) {
                                    return value / 1000 + 'k';
                                }
                            }
                        }
                    }
                }
            });

            const electionCtx = document.getElementById('electionChart').getContext('2d');
            new Chart(electionCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Votos para Jéssica do Premium', 'Outros Candidatos'],
                    datasets: [{
                        data: [53.28, 46.72],
                        backgroundColor: ['#587D71', '#E2DACE'],
                        hoverOffset: 4
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { position: 'bottom' },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.raw}%`;
                                }
                            }
                        }
                    }
                }
            });

            const skillsCtx = document.getElementById('skillsChart').getContext('2d');
            new Chart(skillsCtx, {
                type: 'radar',
                data: {
                    labels: ['Comunicação', 'Gestão', 'Estratégia', 'Liderança', 'Técnica', 'Criatividade'],
                    datasets: [{
                        label: 'Nível de Competência',
                        data: [9, 8, 9, 8, 7, 9],
                        fill: true,
                        backgroundColor: 'rgba(88, 125, 113, 0.2)',
                        borderColor: '#587D71',
                        pointBackgroundColor: '#587D71',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: '#587D71'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        r: {
                            angleLines: { color: 'rgba(0, 0, 0, 0.1)' },
                            grid: { color: 'rgba(0, 0, 0, 0.1)' },
                            pointLabels: { font: { size: 14 } },
                            suggestedMin: 0,
                            suggestedMax: 10,
                            ticks: {
                                backdropColor: 'rgba(255, 255, 255, 0.75)',
                                stepSize: 2
                            }
                        }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });
            
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');
            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                    if(mobileMenu.classList.contains('hidden') === false){
                        mobileMenu.classList.add('hidden');
                    }
                });
            });
        });
    </script>
